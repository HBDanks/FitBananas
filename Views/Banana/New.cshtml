<main class="container">
    <div class="row justify-content-center">
        <h2 class="m-5 text-center">Add a new challenge</h2>
    </div>
        <div class="row justify-content-center mb-3">
            <div class="btn-group col-auto" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="challengeType" value="Run" id="run" autocomplete="off" checked>
                <label class="btn btn-outline-warning" for="run">Run</label>
                
                <input type="radio" class="btn-check" name="challengeType" value="Bike" id="bike" autocomplete="off" checked>
                <label class="btn btn-outline-warning" for="bike">Bike</label>

                <input type="radio" class="btn-check" name="challengeType" value="Swim" id="swim" autocomplete="off">
                <label class="btn btn-outline-warning" for="swim">Swim</label>
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="btn-group col-auto" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-warning" for="btnradio1">Distance</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-warning" for="btnradio3">Elevation Gain</label>
            </div>
        </div>
    <form action="/challenge/accept" method="post">
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <select name="ChallengeId" id="" class="form-select">
                    <option value="" selected disabled hidden>Select Challenge:</option>
                    @foreach (var challenge in @Model.AllChallenges)
                    {
                        <option value="@challenge.ChallengeId">@challenge.Title</option>
                    }
                </select>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button type="submit" class="btn btn-warning">Add Challenge</button>
            </div>
        </div>
    </form>
</main>